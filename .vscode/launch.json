{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TypeScript",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--require",
        "ts-node/register"
      ],
      "args": [
        "main.ts"
      ],
      "cwd": "${workspaceFolder}/ai-code-review",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "restart": true,
      "protocol": "inspector"
    }
  ]
}